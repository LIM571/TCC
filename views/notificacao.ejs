<!-- Exibir Notificações -->
<div class="notificacoes bg-gray-200 p-4 rounded">
  <h2 class="text-lg font-bold mb-2">Notificações</h2>
  <% notificacoes.forEach(function(notificacao) { %>
    <div class="notificacao bg-white p-3 rounded shadow mb-2">
      <p class="text-gray-700"><%= notificacao.mensagem %></p>
      <form action="/notificacoes/lidas" method="POST">
        <input type="hidden" name="notificacao_ids" value="<%= notificacao.id_notificacao %>">
        <button type="submit" class="bg-green-500 text-white py-1 px-3 rounded">Marcar como lida</button>
      </form>
    </div>
  <% }) %>
</div>
